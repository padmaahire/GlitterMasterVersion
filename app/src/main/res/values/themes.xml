<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Glitter" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="CustomTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:statusBarColor">#00000000</item>
    </style>

    <style name="MyCustomButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_medium</item>
        <item name="cornerRadius">16dp</item>
        <item name="drawableTint">@color/primary_color</item>
    </style>

    <style name="BottomSheetActive" >
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="BottomSheetInActive" >
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="textAllCaps">true</item>
    </style>

    <style name="YourStyleNameFor.NavigationDrawer" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlHighlight">@color/white</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="MyCustomButtonYes" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@drawable/unselector_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="drawableTint">@color/light_gray</item>
    </style>

    <style name="MyCustomButtonNo" parent="Widget.AppCompat.Button.Small">
        <item name="android:background">@drawable/selector_button</item>
        <item name="android:textColor">@color/white</item>
        <item name="fontFamily">@font/inter_semibold</item>
        <item name="cornerRadius">16dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="drawableTint">@color/light_gray</item>
    </style>

    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="btn_default">
        <item name="android:layout_margin">2.5dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/light_gray</item>
        <item name="android:textSize">34sp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="btn_zero" parent="btn_default">
        <item name="android:layout_weight">2</item>
    </style>

    <style name="style_table_row">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="btn_operation" parent="btn_default">
        <item name="android:background">@drawable/button</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CategoryAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/inter_regular</item>
    </style>

    <style name="DropdownExposedTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu" >
        <item name="boxCollapsedPaddingTop">-10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="boxBackgroundColor">@color/white</item>
        <item name="android:textColorHint">@color/primary_color</item>
        <item name="android:textAppearance">@style/CategoryAppearance</item>
        <item name="hintTextAppearance">@style/CategoryAppearance</item>
        <item name="hintTextColor">@color/black</item>
        <item name="boxStrokeColor">@color/gray</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="strokeWidth">0.5dp</item>
    </style>
    <style name="table_row_item" parent="@android:style/TextAppearance.Small">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="table_header" parent="@android:style/TextAppearance.Small">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">11sp</item>

        <item name="android:layout_marginRight">1dp</item>
        <item name="android:layout_marginEnd">1dp</item>
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>

</resources>